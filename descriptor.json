
{
  "name": "BIOM3D Training Workflow",
  "version": "1.0",
  "container": "my-biom3d-app",
  "command": "python -m biom3d.preprocess_train --img_dir {img_dir} --msk_dir {msk_dir} --num_classes {num_classes} --desc '{desc}'",
  "inputs": [
    {
      "id": "img_dir",
      "type": "Directory",
      "description": "Directory containing images"
    },
    {
      "id": "msk_dir",
      "type": "Directory",
      "description": "Directory containing masks"
    },
    {
      "id": "num_classes",
      "type": "Integer",
      "description": "Number of classes"
    },
    {
      "id": "desc",
      "type": "String",
      "description": "Description of the dataset"
    }
  ],

}
